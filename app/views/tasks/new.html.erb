

<div class="container card-white mt-4 py-2">

  <h1 class="text-center">Add a new task</h1>

  <%= form_for(@new_task) do |f|%>
  <div class="form-group">
    <%=  f.label :title, class: "control-label"%>
    <%= f.text_field :title, class: "form-control", required: true%>
  </div>

  <div class="form-group">
    <%= f.label :details, class: "control-label" %>
    <%= f.text_area :details, class: "form-control", size: "30x5" , required: true%>

  </div>

<div class="text-center">
  <%= f.submit class: "btn btn-warning" %>
  <% end %>

  <p class="mt-3"><%= link_to "Back to the list!", tasks_path, class: "btn btn-primary" %></p>
</div>

</div>

