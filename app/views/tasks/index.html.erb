

<div class="container card-white mt-4 py-2">

  <h1 class="text-center">Welcome!</h1>

  <h2 class="text-center font-red">These are your tasks:</h2>


  <ul>
    <% @all_tasks.each do |task| %>



    <li class="pt-2 general-list">

      <p class="mr-3"> <%= task.completed ? "✔" : "❌" %> </p>


      <%= link_to task.title.capitalize, task_path(task) %>

            <p class="ml-1"><%= link_to "[delete❗]", task_path(task), class: "delete-link", method: :delete, data: {confirm:"Are you sure?"} %></p>


      </li>

    <% end %>
  </ul>


  <p class=" text-center"><%= link_to "Add a new task", new_task_path, class: "btn btn-warning" %></p>





</div>

