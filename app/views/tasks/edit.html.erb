<div class="container card-white mt-4 py-2">

  <h1 class="text-center">Edit the task</h1>

  <h2 class="font-red text-center"><%= @current_task.title.capitalize %></h2>

  <%= form_for(@current_task) do |f|%>

  <div class="form-group">
    <%=  f.label :title, class: "control-label"%>
    <%= f.text_field :title, class: "form-control", required: true%>
  </div>

  <div class="form-group">
    <%= f.label :details, class: "control-label" %>
    <%= f.text_area :details, class: "form-control", size: "30x5" , required: true%>
  </div>


  <div class="form-check">


    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, class: "form-check-label" %>

  </div>

  <div class="text-center">

  <%= f.submit class: "btn btn-warning mt-3" %>

  <% end %>



</div>



  </div>





<div class="text-center">

  <p class="mt-3 text-center"><%= link_to "Back to the list!", tasks_path, class: "btn btn-primary" %></p>

</div>
